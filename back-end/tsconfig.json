{
    "compilerOptions": {
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "es6",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": "src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}